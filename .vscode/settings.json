{
    "cSpell.words": [
        "blindfrag",
        "BUILDNODE",
        "dockerhub",
        "Dockerized",
        "freeplay",
        "gamesvr",
        "laclede",
        "laclede's",
        "lacledeâ€™s",
        "lacledeslan",
        "LOGFILE",
        "maxplayers",
        "norestart",
        "randommap",
        "srcds",
        "steamclient",
        "steamcmd"
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "markdownlint.ignore": [
        "LICENSE"
    ],
    "shellcheck.exclude": ["1091"],
    "[markdown]": {
        "cSpell.fixSpellingWithRenameProvider": true,
        "cSpell.advanced.feature.useReferenceProviderWithRename": true,
        "cSpell.advanced.feature.useReferenceProviderRemove": "/^#+\\s/",
        "editor.rulers": [120],
        "editor.unicodeHighlight.ambiguousCharacters": true,
        "editor.unicodeHighlight.invisibleCharacters": true,
        "editor.wordWrap": "on"
    }
}
